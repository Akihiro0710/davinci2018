            button(class="button4" type="button" id="left90" style="position: absolute; left: 630px; top: 35%") ←
            button(class="button1" type="button" id="left135" style="position: absolute; left: 630px; top: 40%") ↙
            button(class="button1" type="button" id="right15" style="position: absolute; left: 730px; top: 30%") ↗
            button(class="button4" type="button" id="right90" style="position: absolute; left: 730px; top: 35%") →
            button(class="button1" type="button" id="right135" style="position: absolute; left: 730px; top: 40%") ↘
            button(class="button3" type="button" id="back" style="position: absolute; left: 680px; top: 40%") ↓
