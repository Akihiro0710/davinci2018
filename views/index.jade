extends layout

block content
    h1= title
    p Welcome to #{title}
    form
        input(type="text" id="message")
    div
        button(type="button" value="送信" id="send")
          font("送信")
        button(type="button" value="リセット" id="reset")
          font("リセット")
        button(type="button" value="進む" id="go")
          font("進む")
        button(type="button" value="回転" id="roll")
          font("回転")
    div
        ul(id="messageList")
    script(type='text/javascript' src='/js_client/index.js')
